                @*<span class="label-description">@Html.DisplayNameFor(x => x.Actors): </span><span class="movie-actors">@Html.DisplayFor(x => x.Actors)</span>*@<span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span><span class="label-description"></span><span class="movie-actors"></span>
                <div class="movie-tile-stats"><span class="movie-tile-title">@Model.Title (@Model.Year)</span></div>
                <div class="movie-tile-stats">
                    <span class="label-description">@Html.DisplayNameFor(x => x.Director): </span>
                    <span class="label-value">@Html.DisplayFor(x => x.Director)</span>
                </div>
                <div class="movie-tile-stats">
                    <span class="label-description">@Html.DisplayNameFor(x => x.Actors): </span>
                    <span class="label-value">@Html.DisplayFor(x => x.Actors)</span>
                </div>
            </div>
        </div>
