<div class="col-sm-6 col-md-3">
    <div class="movie-tile">
        <div><img src=@Model.Image alt={@Model.Title} /></div>
        <div class="image-overlay">

        </div>
        <a href="@Url.Action("Edit", "Movies", new { id = Model.Id })">
            <div class="view-details">
                Edit
            </div>
        </a>
        <a href="@Url.Action("Delete", "Movies", new { id = Model.Id })">
            <div class="remove">
                X
            </div>
        </a>
        <div class="stats">
